{
  "manifest_version": 3,
  "name": "github-a11y",
  "description": "This extension helps increase accessibility mindfulness while using GitHub",
  "version": "0.6",
  "content_scripts": [
    {
      "matches": ["https://github.com/*", "https://gist.github.com/*"],
      "css": ["styles.css"],
      "js": ["contentScript.js"]
    },
    {
      "matches": ["https://app.sproutsocial.com/*"],
      "js": ["sproutSocialScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "webNavigation"],
  "host_permissions": ["*://github.com/*", "https://gist.github.com/*", "https://app.sproutsocial.com/*"]
}
